datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model PostView {
  authorName    String?
  content       String?
  createdAt     DateTime  @default(now())
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  publishedDate DateTime?
  title         String?
  updatedAt     DateTime  @updatedAt
}
